			</dependency>

		</dependencies>
	</dependencyManagement>

	<build>

		<!-- Plugins version management -->
		<pluginManagement>
			<plugins>

				<!-- Compiler plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.5.1</version>
					<configuration>
						<!-- By default, compile Java 1.5 sources for JRE 1.5. for better support of 32 bit native libraries -->
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>

				<!-- Bundle plugin -->

				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.4</version>
					<extensions>true</extensions>
					<configuration>
						<instructions>
							<!-- Default bundle headers -->
							<Bundle-Name>${project.name}</Bundle-Name>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<Bundle-Version>${project.version}</Bundle-Version>
							<Bundle-Vendor>${project.organization.name}</Bundle-Vendor>
							<Bundle-DocURL>https://github.com/AdeleResearchGroup/</Bundle-DocURL>
							<Bundle-RequiredExecutionEnvironment>J2SE-1.5</Bundle-RequiredExecutionEnvironment>
							<Bundle-Copyright>Copyright 2011-2012 Joseph Fourier University</Bundle-Copyright>
							<Bundle-License>Apache License - Version 2.0;
								link=http://www.apache.org/licenses/LICENSE-2.0.txt</Bundle-License>
						</instructions>
					</configuration>
				</plugin>

				<!-- iPOJO plugin -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-ipojo-plugin</artifactId>
					<version>1.8.6</version>
					<!-- Attach the iPOJO bundle manipulation to the project lifecycle. -->
					<executions>
						<execution>
							<goals>
								<goal>ipojo-bundle</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<!-- License plugin -->
				<plugin>
					<groupId>com.google.code.maven-license-plugin</groupId>
					<artifactId>maven-license-plugin</artifactId>
					<version>1.4.0</version>
					<configuration>
						<header>${basedir}/parent/license.txt</header>
						<aggregate>true</aggregate>
						<excludes>
							<exclude>.gitignore</exclude>
							<exclude>license.txt</exclude>
							<exclude>**/src/test/resources/**</exclude>
							<exclude>**/src/test/data/**</exclude>
							<exclude>**/public/javascripts/frameworks/**</exclude>
							<exclude>**/app/assets/javascripts/frameworks/**</exclude>
							<exclude>**/*.so</exclude>
							<exclude>**/*.dll</exclude>
							<exclude>**/*.bhv</exclude>
							<exclude>**/*.cfg</exclude>
							<exclude>**/*.dp</exclude>
							<exclude>**/*.xcf</exclude>
							<exclude>**/*.md</exclude>
							<exclude>**/*.jj</exclude>
							<exclude>.git/**/*</exclude>
						</excludes>
					</configuration>
					<executions>
						<execution>
							<phase>verify</phase>
							<goals>
								<goal>format</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>ch.elca.el4j.maven.plugins</groupId>
					<artifactId>maven-depgraph-plugin</artifactId>
					<version>3.1</version>
				</plugin>
				
				<plugin>
					<groupId>com.googlecode.maven-overview-plugin</groupId>
					<artifactId>maven-overview-plugin</artifactId>
					<version>1.6</version>
				</plugin>
				
				<!-- Deployment package plugin -->
				<plugin>
					<groupId>de.akquinet.gomobile</groupId>
					<artifactId>maven-dp-plugin</artifactId>
					<version>1.0.1-SNAPSHOT</version>
					
				</plugin>
				
				<!-- Ant plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>1.7</version>
				</plugin>
				
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.3</version>
				</plugin>

				<!-- Play2 framework plugin -->
				<plugin>
                	<groupId>de.akquinet.innovation.play2</groupId>
                	<artifactId>play2-maven-plugin</artifactId>
                	<version>1.2.1</version>
            	</plugin>

                <!-- Release plugins -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <allowTimestampedSnapshots>true</allowTimestampedSnapshots>
                        <autoVersionSubmodules>true</autoVersionSubmodules>
                        <releaseProfiles>release</releaseProfiles>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.12</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.8.1</version>
                    <configuration>
                        <excludePackageNames>*.internal,*.internal.*,*.impl,*.impl.*</excludePackageNames>
                    </configuration>
                </plugin>
				
			</plugins>
		</pluginManagement>

		<!-- Build extensions -->
		<extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-webdav-jackrabbit</artifactId>
                <version>2.2</version>
            </extension>
            <extension>
                <groupId>de.akquinet.innovation.play2</groupId>
                <artifactId>play2-maven-plugin</artifactId>
                <version>1.2.1</version>
            </extension>
		</extensions>
		
		<plugins>
		  <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <version>1.0</version>
            <executions>
                <execution>
                    <phase>initialize</phase>
                    <goals>
                        <goal>execute</goal>
                  </goals>
                   <configuration>
                      <source>
                      import org.apache.commons.lang.StringUtils
					  
                      transformName = project.properties["projectName"].replaceAll("\\.", " ")
					  def words = transformName.split(" ")
                      def capitalizedStr = []
                      for ( i in 0..(words.size() - 1) ) {
                        def w = words[i]
						def capW = w[0].toUpperCase()
                        def leafW = w[1..-1]
                        capitalizedStr += (capW + leafW)
                      }
					  
                      project.properties["projectName"] = capitalizedStr.join(' ')
                     </source>
                 </configuration>
             </execution>
            </executions>
          </plugin>
		</plugins>
	</build>
</project>
