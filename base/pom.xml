      <url>https://github.com/AdeleResearchGroup/ADELE-Common.git</url>
      <developerConnection>scm:git:ssh://git@github.com/AdeleResearchGroup/ADELE-Common.git</developerConnection>
      <tag>HEAD</tag>
   </scm>
</project>
